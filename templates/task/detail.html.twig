{% extends 'base.html.twig' %}

{% block title %}Detalls de la tasca {{task.title}}{% endblock %}

{% block body %}

<div class="container-fluid">
    <h2>{{task.title}}</h2>
    <p class="text-secondary">{{task.user.name ~" "~ task.user.surname ~" | "~ task.createdAt|date("d/m/Y h:m") ~" | "~ task.getPriority ~" | "~ task.getHours}}</p>
    <p>{{task.getContent}}</p>
</div>

{% endblock %}