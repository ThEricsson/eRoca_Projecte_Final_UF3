{% extends 'base.html.twig' %}

{% block title %}Les meves tasques{% endblock %}

{% block body %}

<h2>Les meves tasques</h2>

<div class="container-fluid p-0">
    {% if tasques|length > 0 %}

        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col">Tasca</th>
                    <th scope="col">Prioritat</th>
                    <th scope="col">Hores Pressupostades</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasques %}
                    <tr>
                        <td>{{task.getTitle}}</td>
                        <td>{{task.getPriority}}</td>
                        <td>{{task.getHours}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    {% else %}
        <p class="text-success">Felicitats! No tens tasques a fer.</p>
        <a class="btn btn-success btn-sm" href="/task/create">Afegir tasques</a>
    {% endif %}
</div>

{% endblock %}